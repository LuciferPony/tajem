section.section-contact
  .section-contact__wrapper.wrapper
    form.section-contact__form.form
      h2.form__title.title Give us a good news
      input(type="text" id="name" placeholder="Name").form__input
      input(type="email" id="email" placeholder="Email").form__input
      input(type="text" id="subject" placeholder="Subject").form__input
      textarea(type="textarea" id="message" placeholder="Your message").form__input.textarea__input
      button.form__btn.btn Submit
    .section-contact__clients.clients
      h2.clients__title.title Our happy clients
      ul.clients__list
